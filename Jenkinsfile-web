pipeline {

    agent {
        label 'master'
    }

    environment {
        composefile = "web-docker-compose.yml"
    }


    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Print Environment') {
            steps {
                sh('ls -al')
                sh('printenv')
            }
        }
        /*
        stage('Docker-compose pull new images') {
            steps {
                sh "docker-compose -f ${env.composefile}  pull"
	        }
	    }

        stage('Docker-compose start web') {
            steps {
                sh "docker-compose -f ${env.composefile}  up -d"
            }
        }
        */
        stage('Ansible prepareations docker ') {
            steps{
                sh 'ANSIBLE_ROLES_PATH="$PWD/ansible-script/roles" ansible-playbook -vvv ./ansible-script/playbook/web-server/web-server.yml -i ./ansible-script/host -u root -e "state=deployment"'
        }        

    }
}

