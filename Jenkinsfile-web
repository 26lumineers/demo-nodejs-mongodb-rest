pipeline {

    agent {
        label 'master'
    }

    environment {
        composefile = "web-docker-compose.yml"
    }


    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Print Environment') {
            steps {
                sh('ls -al')
                sh('printenv')
            }
        }

        stage('Docker-compose pull new images') {
            steps {
                sh "docker-compose -f ${env.composefile}  pull"
	        }
	}

        stage('Docker-compose start web') {
            steps {
                sh "docker-compose -f ${env.composefile}  up -d"
            }
        }


    }
}

